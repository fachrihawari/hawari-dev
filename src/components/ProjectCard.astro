---
import type { CollectionEntry } from "astro:content";
interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<article
  class="border px-4 py-2 rounded-xl hover:translate-x-3 ease-in-out duration-200"
>
  <h3 class="text-2xl font-medium flex items-center">
    {project.data.title}
    <svg
      class="ml-2"
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="18"
      viewBox="0 0 24 24"
    >
      <g
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-width="1.5"
      >
        <path stroke-linejoin="round" d="M21 3h-6m6 0l-9 9m9-9v6"></path>
        <path d="M21 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6"
        ></path>
      </g>
    </svg>
  </h3>
  <p class="mt-1">
    {project.data.description}
  </p>
  <div class="flex flex-row gap-2 my-2 flex-wrap">
    {
      project.data.tags.map((tag) => (
        <span class="bg-gray-950 text-white px-1 py-0.5 rounded-lg">
          #{tag}
        </span>
      ))
    }
  </div>
</article>
