---
interface Props {
  tags: string[]
  classes?: string
}

const { tags, classes } = Astro.props
---

<div class={`flex flex-row gap-2 flex-wrap ${classes}`}>
  {
    tags.map((tag) => (
      <span class="px-3 py-1 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200">
        {tag}
      </span>
    ))
  }
</div>
