---
interface Props {
  tags: string[]
  classes?: string
}

const { tags, classes } = Astro.props
---

<div class={`flex flex-row gap-2 flex-wrap ${classes}`}>
  {
    tags.map((tag) => (
      <span class="bg-gray-950 text-white px-1 py-0.5 rounded-lg">
        #{tag}
      </span>
    ))
  }
</div>