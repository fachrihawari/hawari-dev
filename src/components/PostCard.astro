---
import type { CollectionEntry } from "astro:content";
import Tags from "./Tags.astro";
interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<article class="border px-4 py-2 rounded-xl hover:translate-x-3 ease-in-out duration-200">
  <h3 transition:name={`post-title-${post.data.title}`} class="text-2xl font-medium">{post.data.title}</h3>
  <p class="mt-1">
    {post.data.description}
  </p>

  <Tags tags={post.data.tags} classes="my-2" />
</article>
