---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';
import mePicture from "../assets/img/me.jpg";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
	title="Home"
	description="Personal site of Fachri Hawari, a FullStack JavaScript Instructor at Hacktiv8"
>
  <div class="bg-white dark:bg-gray-900 flex flex-col w-full md:flex-row-reverse items-center md:justify-between h-full">
		<!-- Profile Image -->
		<div class="group">
			<Image
				class="rounded-lg w-64 h-64 md:w-full md:h-full object-cover object-top"
				src={mePicture}
				alt="Fachri Hawari"
				width={256}
				height={512}
			/>
		</div>

		<!-- Content -->
		<div class="py-8 flex flex-col justify-center max-w-2xl">
			<h1
				class="text-5xl md:text-6xl font-black text-gray-900 dark:text-white mb-6 tracking-tight"
			>
				Hi, I'm <span class="underline decoration-2 underline-offset-4"
					>Fachri</span
				>
			</h1>

			<div
				class="space-y-6 text-xl text-gray-600 dark:text-gray-300 leading-relaxed"
			>
				<p>
					I'm a <strong class="text-gray-900 dark:text-white"
						>FullStack JavaScript Instructor</strong
					> at <strong class="text-gray-900 dark:text-white">Hacktiv8</strong>,
					passionate about crafting digital experiences and empowering the next
					generation of developers.
				</p>

				<p>
					I work with <code
						class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white px-2 py-1 rounded text-lg font-mono"
						>JavaScript</code
					> & <code
						class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white px-2 py-1 rounded text-lg font-mono"
						>TypeScript</code
					> to build modern web applications and share knowledge through teaching
					and writing.
				</p>

				<p>
					This space serves as my <em
						class="text-gray-900 dark:text-white not-italic font-medium"
						>digital journal</em
					>â€”a collection of thoughts, learnings, and discoveries from my journey
					in technology.
				</p>
			</div>

			<!-- Social Media Links -->
			<div class="mt-6 grid grid-cols-2 sm:flex gap-3">
				<a
					href="https://github.com/fachrihawari"
					target="_blank"
					rel="noopener noreferrer"
					class="group flex items-center justify-center sm:justify-start gap-2 sm:gap-3 px-3 sm:px-4 py-3 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-all duration-200 border border-gray-200 dark:border-gray-600"
				>
					<Icon
						size={20}
						name="iconoir:github"
						class="text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
					/>
					<span
						class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-gray-900 dark:group-hover:text-white"
						>GitHub</span
					>
				</a>
				<a
					href="https://x.com/fachrihawari"
					target="_blank"
					rel="noopener noreferrer"
					class="group flex items-center justify-center sm:justify-start gap-2 sm:gap-3 px-3 sm:px-4 py-3 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-all duration-200 border border-gray-200 dark:border-gray-600"
				>
					<Icon
						size={20}
						name="iconoir:twitter"
						class="text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
					/>
					<span
						class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-gray-900 dark:group-hover:text-white"
						>Twitter</span
					>
				</a>
				<a
					href="https://linkedin.com/in/fachrihawari"
					target="_blank"
					rel="noopener noreferrer"
					class="group flex items-center justify-center sm:justify-start gap-2 sm:gap-3 px-3 sm:px-4 py-3 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-all duration-200 border border-gray-200 dark:border-gray-600"
				>
					<Icon
						size={20}
						name="iconoir:linkedin"
						class="text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
					/>
					<span
						class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-gray-900 dark:group-hover:text-white"
						>LinkedIn</span
					>
				</a>
				<a
					href="mailto:fachri.hawari@gmail.com"
					class="group flex items-center justify-center sm:justify-start gap-2 sm:gap-3 px-3 sm:px-4 py-3 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-all duration-200 border border-gray-200 dark:border-gray-600"
				>
					<Icon
						size={20}
						name="iconoir:mail"
						class="text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
					/>
					<span
						class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-gray-900 dark:group-hover:text-white"
						>Email</span
					>
				</a>
			</div>
		</div>
	</div>
</MainLayout>
